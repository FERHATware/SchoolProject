@model StudentcourseVM

<div class="container mt-5" style="max-width: 650px;">

    <div class="card shadow-lg p-4">

        <h3 class="text-center text-primary mb-4">
            <i class="bi bi-journal-plus"></i> Register Student to Course
        </h3>

        <!-- Back Button -->
        <div class="mb-3">
            <a class="btn btn-outline-secondary btn-sm"
               asp-controller="Home" asp-action="Index">
                <i class="bi bi-arrow-left"></i> Back To Home
            </a>
        </div>

        <form asp-action="Register" method="post">

            <!-- Course Row -->
            <div class="mb-3">
                <label class="form-label fw-bold">Course Name</label>
                <select class="form-select" name="CourseId" required>
                    <option disabled selected>-- Select Course --</option>

                    @foreach (Course item in Model.CourseVM)
                    {
                        <option value="@item.CourseId">@item.CourseName</option>
                    }
                </select>
            </div>

            <!-- Student Row -->
            <div class="mb-3">
                <label class="form-label fw-bold">Student Name</label>
                <select class="form-select" name="StudentId" required>
                    <option disabled selected>-- Select Student --</option>

                    @foreach (Student item in Model.StudentVM)
                    {
                        <option value="@item.StudentId">@item.StudentName</option>
                    }
                </select>
            </div>

            <!-- Submit Button -->
            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                    <i class="bi bi-save"></i> Save
                </button>
            </div>

        </form>

    </div>

</div>
