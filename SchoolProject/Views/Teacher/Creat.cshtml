


<div class="container mt-5" style="max-width: 650px;">
    <div class="card shadow-lg p-4">
        <h3 class="text-center text-primary mb-4">Create New Teacher</h3>

        <form action="Creat" method="post">

            <!-- Teacher Name -->
            <div class="mb-3">
                <label class="form-label">Teacher Name</label>
                <input type="text"
                       class="form-control"
                       name="TeacherName"
                       placeholder="Enter teacher name"
                       required />
            </div>

            <!-- Teacher Age -->
            <div class="mb-3">
                <label class="form-label">Teacher Age</label>
                <input type="number"
                       class="form-control"
                       name="TeacherAge"
                       min="18"
                       max="90"
                       placeholder="Enter teacher age"
                       required />
            </div>

            <!-- Submit button -->
            <div class="d-grid">
                <button type="submit" class="btn btn-success btn-lg shadow-sm">
                    Save Teacher
                </button>
            </div>

        </form>
    </div>
</div>

