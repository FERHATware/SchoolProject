@model List<Teacher>

<div class="container mt-5" style="max-width: 650px;">
    <div class="card shadow-lg p-4">
        <h3 class="text-center text-primary mb-4">Create New Course</h3>

        <form asp-action="Creat" method="post">

            <!-- Course Name -->
            <div class="mb-3">
                <label class="form-label">Course Name</label>
                <input type="text"
                       class="form-control"
                       name="CourseName"
                       placeholder="Enter course name"
                       maxlength="10"
                       required />
            </div>

            <!-- Course Capacity -->
            <div class="mb-3">
                <label class="form-label">Course Capacity</label>
                <input type="number"
                       class="form-control"
                       name="CourseCapisity"
                       min="0"
                       max="25"
                       required />
            </div>

            <!-- Teacher -->
            <div class="mb-3">
                <label class="form-label">Teacher</label>
                <select class="form-select" name="TeacherId" required>
                    <option value="">-- Select Teacher --</option>

                    @foreach (Teacher item in Model)
                    {
                        <option value="@item.TeacherId">@item.TeacherName</option>
                    }
                </select>
            </div>

            <!-- Submit button -->
            <div class="d-grid">
                <button type="submit" class="btn btn-success btn-lg shadow-sm">
                    Save Course
                </button>
            </div>

        </form>
    </div>
</div>

