@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">

    <div class="text-center mb-4">
        <h1 class="display-4 text-primary fw-bold">Welcome to the Learning System</h1>
        <p class="text-secondary fs-5">
            Manage Teachers, Courses and Students easily through this system.
        </p>
    </div>

    <div class="row justify-content-center">

        <!-- Teachers Section -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-body text-center p-4">
                    <i class="bi bi-person-lines-fill" style="font-size: 3rem; color: #0d6efd;"></i>
                    <h4 class="mt-3">Teachers</h4>
                    <p class="text-muted">View, add, edit, and manage teachers.</p>

                    <a href="/Teacher/Index" class="btn btn-primary w-100">
                        Go to Teachers
                    </a>
                </div>
            </div>
        </div>

        <!-- Courses Section -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-body text-center p-4">
                    <i class="bi bi-journal-bookmark-fill" style="font-size: 3rem; color: #198754;"></i>
                    <h4 class="mt-3">Courses</h4>
                    <p class="text-muted">Create, update and assign teachers to courses.</p>

                    <a href="/Course/Index" class="btn btn-success w-100">
                        Go to Courses
                    </a>
                </div>
            </div>
        </div>

    </div>

</div>

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
